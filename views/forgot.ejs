<% include ./partials/header %>

<div class="container">
    <div class="row d-flex flex-column">
        <h1 style="text-align: center;" class="display-4">Reset Password</h1>
        <div class="mt-3" style="width: 50%; margin: 0 auto;">
            <form action="/forgot" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email address" autofocus required>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Reset Password">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>